<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <!-- Top Decorative Background -->
    <ImageView
        android:id="@+id/bgTopLeft"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/bg_circle_updated"
        android:scaleType="fitXY"
        android:contentDescription="@string/todo11" />

    <ImageView
        android:id="@+id/bgTopRight"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/bg_circle_updated"
        android:scaleType="fitXY"
        android:contentDescription="@string/todo10" />

    <!-- Bottom Navigation -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:layout_marginBottom="-1dp"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Welcome + Trophy -->

            <TextView
                android:layout_width="217dp"
                android:layout_height="41dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="@string/welcome_khaya_dash"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="115dp"
                android:layout_height="87dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/noBG_logo"
                android:contentDescription="@string/logo" />

            <TextView
                android:layout_width="207dp"
                android:layout_height="18dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/under_budget_over_achiever"
                android:textColor="#888888"
                android:textSize="14sp" />

            <!-- Date Pill -->
            <TextView
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/date_range_backround"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/_01_mar_29_mar"
                android:textColor="#000000"
                android:textStyle="bold" />

            <!-- Net Worth + Debt Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="218dp"
                            android:layout_height="43dp"
                            android:gravity="center"
                            android:text="@string/net_worth01"
                            android:textColor="#4CAF50"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="218dp"
                            android:layout_height="41dp"
                            android:gravity="center"
                            android:text="@string/r16_523_00"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="164dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="@string/debt"
                            android:textColor="#F44336"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="218dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="@string/r4_278_00"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Category Icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_rent"
                    android:contentDescription="@string/todo01" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_groceries"
                    android:contentDescription="@string/todo2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_transport"
                    android:contentDescription="@string/todo03" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_luxuries"
                    android:contentDescription="@string/todo04" />
            </LinearLayout>

            <!-- Upcoming Bills -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal">

                <!-- Upcoming Bills Title Box -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bill_card_background"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="350dp"
                        android:layout_height="38dp"
                        android:gravity="center"
                        android:text="@string/upcoming_bills"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Bill divs-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bill_card_background"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="21dp"
                        android:text="@string/rent_r6_700_00"
                        android:textColor="#FF5722"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bill_card_background"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="22dp"
                        android:text="@string/groceries_r3_600_00"
                        android:textColor="#03A9F4"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bill_card_background"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="22dp"
                        android:text="@string/transport_r2_300_00"
                        android:textColor="#9C27B0"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#F0F0F0"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="5">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/dashboard_icon_1"
            android:contentDescription="@string/todo05" />

        <ImageView android:id="@+id/navInsights" android:src="@drawable/dashboard_icon_2" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:padding="12dp"
            android:contentDescription="@string/todo06" />
        <ImageView android:id="@+id/navAdd" android:src="@drawable/dashboard_icon_3" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:padding="12dp"
            android:contentDescription="@string/todo07" />
        <ImageView android:id="@+id/navProfile" android:src="@drawable/dashboard_icon_4" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:padding="12dp"
            android:contentDescription="@string/todo08" />
        <ImageView android:id="@+id/navSettings" android:src="@drawable/dashboard_icon_5" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:padding="12dp"
            android:contentDescription="@string/todo09" />
    </LinearLayout>
</RelativeLayout>
