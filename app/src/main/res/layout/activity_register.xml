<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- Wrap everything inside a LinearLayout to make it the direct child of the ScrollView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Background decorative circle -->
        <ImageView
            android:id="@+id/bgDecor"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/splash_image_1"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/formLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bgDecor"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Title -->
            <TextView
                android:text="Create your Profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Subtitle -->
            <TextView
                android:text="One account, \Unlimited Savings."
                android:textColor="#666666"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- First Name -->
            <EditText
                android:id="@+id/nameInput"
                android:hint="Enter First Name"
                android:textColorHint="#666666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:textColor="#000000"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Last Name -->
            <EditText
                android:id="@+id/surnameInput"
                android:hint="Enter Last Name"
                android:textColorHint="#666666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:textColor="#000000"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Username -->
            <EditText
                android:id="@+id/usernameInput"
                android:hint="Create Username"
                android:textColorHint="#666666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:textColor="#000000"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Email -->
            <EditText
                android:id="@+id/emailInput"
                android:hint="Enter E-mail"
                android:textColorHint="#666666"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:textColor="#000000"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Password -->
            <EditText
                android:id="@+id/passwordInput"
                android:hint="Create Password"
                android:textColorHint="#666666"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:textColor="#000000"
                android:padding="12dp"
                android:layout_marginBottom="4dp" />


            <!-- Password Strength Indicators -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="8dp">

                <RadioButton
                    android:id="@+id/characterRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8â€“12 Characters"
                    android:enabled="false"
                    android:textColor="#666666"/>

                <RadioButton
                    android:id="@+id/specialRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special Character"
                    android:enabled="false"
                    android:textColor="#666666"/>

                <RadioButton
                    android:id="@+id/numericalRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="At least 1 Number"
                    android:enabled="false"
                    android:textColor="#666666"/>
            </LinearLayout>

            <!-- Confirm Password -->
            <EditText
                android:id="@+id/confirmPasswordInput"
                android:hint="Re-enter Password"
                android:textColorHint="#666666"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:textColor="#000000"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Register Button -->
            <Button
                android:id="@+id/btnRegister"
                android:text="Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFB74D"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <!-- Sign in text -->
            <TextView
                android:id="@+id/signInText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Sign in"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginBottom="24dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
